{
  "name": "MakeTable",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Make table from repeating elements",
  "action": {
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }    
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
	  "*://*/*"
  ],
  "icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  }
  
}